---
import ResumeButton from "./ResumeButton.astro";
---

<style>
  /* For mobile phones */
  .header__navbar__container {
    display: none;
  }

  /* For desktop and large devices */
  @media only screen and (min-width: 992px) {
    .header__navbar__container {
      display: flex;
      gap: 20px;
    }
    .header__navbar__links {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 300px;
    }
  }
</style>

<div class="header__navbar__container hidden">
  <ul class="header__navbar__links">
    <li>
      <a href="#about">About</a>
    </li>
    <li>
      <a href="#projects">Projects</a>
    </li>
    <li>
      <a href="#contact">Contact</a>
    </li>
  </ul>
  <div>
    <ResumeButton />
  </div>
</div>
