---
import Ecommerce from "../src/assets/ecommerce.png";
import Encriptador from "../src/assets/encriptador.png";
---

<style>
  /* For mobile phones */
  #projects {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 1000px;
  }

  h2 {
    text-align: center;
  }

  .container {
    display: grid;
    grid-template-columns: 1fr;
    place-items: center;
  }

  .project {
    width: 100%;
    height: 100%;
    padding: 0.75rem;
  }

  figure {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 20px;
  }

  img {
    width: 100%;
    height: 100%;
    transition: all 0.45s ease-in-out;
  }

  figurecaption {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--secondary-color);
    transition: all 0.45s ease-out;
    z-index: 1;
  }

  figurecaption div {
    padding: 0 auto;
  }

  figurecaption h1 {
    text-align: center;
  }

  figurecaption:hover {
    opacity: 1;
  }

  /* For tablets, desktop and large devices */
  @media only screen and (min-width: 768px) {
    .container {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

<section id="projects" class="hidden">
  <h2>Projects</h2>
  <div class="container">
    <div class="project">
      <figure>
        <img src={Ecommerce} alt="ecommerce" />
        <figurecaption>
          <div>
            <h1>Lottus</h1>
            <h1>Small Ecommerce built with PERN stack and developed with docker.</h1>
          </div>
        </figurecaption>
      </figure>
    </div>
    <div class="project">
      <figure>
        <img src={Encriptador} alt="encriptador" />
        <figurecaption>
          <div>
            <h1>Encriptador</h1>
            <h1>Encrypts the input of the user.</h1>
          </div>
        </figurecaption>
      </figure>
    </div>
  </div>
</section>
