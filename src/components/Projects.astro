---
import Ecommerce from "../assets/ecommerce.png";
import Encriptador from "../assets/encriptador.png";
import WeatherApp from "../assets/weather-app.png";
import TaskManager from "../assets/task-manager.png";
---

<style>
  /* For mobile phones */
  #projects {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  h2 {
    text-align: center;
  }

  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }

  .project {
    width: 100%;
    height: 190px;
  }

  figure {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 10px;
  }

  img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    transition: all 0.45s ease-in-out;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  figurecaption {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    background: var(--secondary-color);
    transition: all 0.45s ease-out;
    z-index: 1;
  }

  figurecaption p,
  figurecaption span,
  figurecaption a {
    font-size: clamp(0.875rem, 2vw, 1.25rem);
  }

  figurecaption div {
    padding: 0 auto;
  }

  figurecaption h1 {
    text-align: center;
  }

  figurecaption:hover {
    opacity: 1;
  }

  .caption {
    text-align: center;
    color: var(--main-color);
    font-weight: 600;
  }

  .stack {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 5px;
  }

  .stack span {
    background: var(--main-color);
    color: var(--secondary-color);
    padding: 0.25rem 0.5rem;
    border-radius: 10px;
  }

  .btn-visit-website {
    display: block;
    border: solid 1px var(--main-color);
    background: transparent;
    color: var(--main-color);
    padding: 0.75rem 1rem;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s ease-in-out;
  }

  .btn-visit-website:hover {
    background: rgba(13, 13, 13, 0.8);
  }

  /* For tablets */
  @media only screen and (min-width: 768px) {
    .project {
      height: 350px;
    }
  }

  /* For desktop and large devices */
  @media only screen and (min-width: 992px) {
    .container {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 0;
    }

    .project {
      width: 50%;
      height: 284px;
      padding: 5px;
    }
  }
</style>

<section id="projects" class="hidden">
  <h2>Projects</h2>
  <div class="container">
    <div class="project">
      <figure>
        <img src={Ecommerce} alt="ecommerce" />
        <figurecaption>
          <p class="caption">Ecommerce with authentication, cart and checkout</p>
          <div class="stack">
            <span>React</span>
            <span>Node.js</span>
            <span>Express</span>
            <span>PostgreSQL</span>
            <span>Docker</span>
            <span>JWT</span>
            <span>REST</span>
            <span>MUI</span>
          </div>
          <a class="btn-visit-website" href="https://lottus.onrender.com" target="_blank">
            Visit Website
          </a>
        </figurecaption>
      </figure>
    </div>
    <div class="project">
      <figure>
        <img src={Encriptador} alt="encriptador" />
        <figurecaption>
          <p class="caption">Basic Encryptor</p>
          <div class="stack">
            <span>HTML</span>
            <span>CSS</span>
            <span>JavaScript</span>
          </div>
          <a
            class="btn-visit-website"
            href="https://clouddcoder.github.io/encriptador-alura/"
            target="_blank"
          >
            Visit Website
          </a>
        </figurecaption>
      </figure>
    </div>
    <div class="project">
      <figure>
        <img src={WeatherApp} alt="wheater app" />
        <figurecaption>
          <p class="caption">Weather App using the OpenWeatherMap API</p>
          <div class="stack">
            <span>React</span>
            <span>JavaScript</span>
            <span>CSS</span>
            <span>Tailwind</span>
          </div>
          <a class="btn-visit-website" href="https://weather-app-fm3c.onrender.com" target="_blank">
            Visit Website
          </a>
        </figurecaption>
      </figure>
    </div>
    <div class="project">
      <figure>
        <img src={TaskManager} alt="task manager" />
        <figurecaption>
          <p class="caption">Task Manager CRUD app</p>
          <div class="stack">
            <span>EJS</span>
            <span>CSS</span>
            <span>JavaScript</span>
            <span>PostgreSQL</span>
            <span>Node.js</span>
            <span>Express</span>
            <span>REST</span>
            <span>Docker</span>
            <span>JWT</span>
          </div>
          <a
            class="btn-visit-website"
            href="https://task-manager-sn3p.onrender.com"
            target="_blank"
          >
            Visit Website
          </a>
        </figurecaption>
      </figure>
    </div>
  </div>
</section>
